  "dependencies": {
    "@repo/ui": "*",
    "browserfs": "^1.4.3",
    "ini": "^5.0.0",
    "next": "^15.2.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-rnd": "^10.5.2",
    "three": "0.125.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/ini": "^4.1.1",
    "@types/jest": "29.5.14",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-rnd": "^7.4.4",
    "@types/three": "^0.175.0",
    "autoprefixer": "^10.4.21",
